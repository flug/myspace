tray-background = inherit
tray-padding = 10
cursor-click = pointer


[module/date]
type = internal/date
interval = 1.0
time = %H:%M:%S
; time-alt = %Y-%m-%d

format-prefix-foreground = ${colors.blue}
format-prefix-padding-right = 1
format-background = inherit
format-prefix-overline = ${colors.blue}
format-prefix-underline = ${colors.blue}
format-padding = 1
format-prefix = "󱑂 "
label = %time%

format-foreground = ${colors.foreground}
format-overline = ${colors.blue}
format-underline = ${colors.blue}

[module/launch-phpstorm]
type = custom/script
exec = echo " PhpStorm"
click-left = /opt/PhpStorm/bin/phpstorm.sh &
format = <label>
format-overline = ${colors.orange}
format-underline = ${colors.orange}
format-padding = 1


[module/i3]
type = internal/i3
enable-scroll = false
show-urgent = true
